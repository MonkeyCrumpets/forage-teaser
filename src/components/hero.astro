<style>
  @keyframes fadein {
    from {opacity: 0}
    to {opacity: 1}
  }
  .heroSection {
    background-image: url(/img/hero.jpg);
    background-image: url(/img/hero.webp);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 90vh;
    width: 100%;
    display: grid;
    grid-template-columns: 10% auto 10%;
    grid-template-rows: 10% auto 15%;
  }
  .heroSection.visible {
   animation: fadein 1000ms;
    animation-fill-mode: both;
  }
  @keyframes fadeup {
    from { 
      transform: translateY(2em);
      opacity: 0%;
      scale: 0.5
    }
    to {    
      transform: translateY(0em);
      opacity: 100%;
    }
  }
  #heroText {
    will-change: transform;
    animation: fadeup 500ms;
    animation-fill-mode: both;
    animation-delay: 500ms;
  }
  
  #heroBox {
    justify-items: center;
    align-self: center;
    display: grid;
    height: fit-content;
    grid-row: 2;
    grid-column: 2;
  }

  #heroBottom {
    display: grid;
    justify-content: center;
    align-self: end;
    padding: 2em;
    grid-row: 3;
    grid-column: 2;
  }
  @keyframes bounce {
    0% {transform: translateY(0px); opacity: 0.5}
    25% {transform: translateY(20px); opacity: 0.6}
    50% {transform: translateY(0px); opacity: 0.6}
    75% {transform: translateY(20px); opacity: 0.6}
    100% {transform: translateY(0px); opacity: 0.5}
  }
  .btn {
    will-change: transform;
    opacity: 0.5;
    animation: bounce 1000ms;
    animation-delay: 5000ms;
    transition: opacity 250ms;
  }
  .btn:hover {
    opacity: 0.8;
  }
</style>
