<style>
  html {
    box-sizing: border-box;
    scroll-behavior: smooth;
  }
  *,
  *:before,
  *:after {
    box-sizing: inherit;
  }
  body {
    display: none;
    margin: 0;
    padding: 0;
    background-color: #fbf7f0;
  }
</style>
<script>
$(window).on('load', function(){
  // When the page has loaded
  $("body").fadeIn(500);
});
</script>